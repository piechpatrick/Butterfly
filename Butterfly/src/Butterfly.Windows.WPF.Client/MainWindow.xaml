<Window x:Class="Butterfly.Windows.WPF.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Butterfly.Windows.WPF.Client"
        xmlns:viewModels="clr-namespace:Butterfly.Windows.WPF.Client.Core.ViewModels;assembly=Butterfly.Windows.WPF.Client.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:mvvm="http://prismlibrary.com/"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel, IsDesignTimeCreatable=True}"
        mvvm:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Image Source="{Binding ImageSource, UpdateSourceTrigger=PropertyChanged}" />

    </Grid>
</Window>
